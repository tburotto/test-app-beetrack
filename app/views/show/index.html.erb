<div class="panel panel-default">
  <div class="panel-body">
    <center> <h2> Localización de Vehículos </h2> </center>
  </div>
</div>
<div class="container-fluid">
    <div class="row">
        <div class="col-md-8">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div id="mapid"></div>
                    
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="panel panel-default">
                <div class="panel-body">
                    <h4> Vehiculos disponibles </h4>
                    <% @result.each do |vehicle| %>
                        <p> Matricula: <%= vehicle[0].identifier %> </p>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>

<script>

    var mymap = L.map('mapid').setView([-33.446349, -70.660217], 12);
    L.tileLayer('https://api.tiles.mapbox.com/v4/{id}/{z}/{x}/{y}.png?access_token=pk.eyJ1IjoibWFwYm94IiwiYSI6ImNpejY4NXVycTA2emYycXBndHRqcmZ3N3gifQ.rJcFIG214AriISLbB6B5aw', {
    maxZoom: 18,
    attribution: 'Map data &copy; <a href="https://www.openstreetmap.org/">OpenStreetMap</a> contributors, ' +
        '<a href="https://creativecommons.org/licenses/by-sa/2.0/">CC-BY-SA</a>, ' +
        'Imagery © <a href="https://www.mapbox.com/">Mapbox</a>',
    id: 'mapbox.streets'
    }).addTo(mymap);

</script>
<% @result.each do |result|%>
          <script >
            L.marker([<%= result[1].latitude%>, <%= result[1].longitude %>]).addTo(mymap)
              .bindPopup('<b>Matricula: <%=result[0].identifier%></b> <br> <b> Fecha y hora: <%= result[1].send_at %></b>').openPopup();
          </script>
          <%  end %>
